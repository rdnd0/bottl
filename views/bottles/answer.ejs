<div class="container">
<h3>Someones bottle</h3>


<div class="answer-box">

  <% bottles.forEach((bottle) => { %>
  <p id="user-li"><%= bottle.sender %></p>
  <p><%= bottle.content %></p>
  <% }) %>  

</div>


<form action="/bottles/answer" method="post">
<div class="form-row">
    <label for="">This is your bottle..</label>
    <input type="hidden" name="currentThread" value="<%= bottles[0].thread %>">
    <textarea id="content" class="login" name="content" rows="7" cols="30" placeholder="Your message here"></textarea>
  </div> 
  <input class="btn-login" type="submit" value="add" >
</form>
<p></p>
<div class="history">
  <div class="arrow-left "><a href="/bottles">AAA</a></div>
  <a href="logout"><img src="/images/exit.png" class="img-exit" alt="exit"></a>
  </div>
</div>
</div>